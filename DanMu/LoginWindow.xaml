<Window x:Class="DanMu.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DanMu"
        mc:Ignorable="d"
        Title="登录-云弹幕" Height="320" Width="320">
    <Grid>
        <Label x:Name="labelAccount" Content="账号" 
               HorizontalAlignment="Left" Margin="71,119,0,0" 
               VerticalAlignment="Top" Width="40"/>
        <TextBox x:Name="textBoxAccount" HorizontalAlignment="Left" 
                 Height="20" Margin="119,123,0,0" 
                 TextWrapping="NoWrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="labelPassword" Content="密码" 
               HorizontalAlignment="Left" Margin="71,165,0,0" 
               VerticalAlignment="Top" Width="40"/>
        <PasswordBox x:Name="passwordBox" 
                     Height="20"
                     HorizontalAlignment="Left" Margin="119,169,0,0" 
                     VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonOk" Content="登录" 
                HorizontalAlignment="Left" Margin="71,215,0,0" 
                VerticalAlignment="Top" Width="75"/>
        <Button x:Name="buttonCancel" Content="取消" 
                HorizontalAlignment="Left" Margin="164,215,0,0" 
                VerticalAlignment="Top" Width="75"/>
        <Image x:Name="imageLogo" HorizontalAlignment="Left" 
               Height="75" Margin="120,27,0,0" 
               VerticalAlignment="Top" Width="75"
               Source="danmu.ico"/>
        <Label x:Name="labelBarCode" Content="扫描二维码" 
               HorizontalAlignment="Left" Margin="119,251,0,0" 
               VerticalAlignment="Top"/>
        <Image x:Name="imageBarCode" 
               HorizontalAlignment="Left" 
               Height="100" Margin="98,102,0,0" 
               VerticalAlignment="Top" Width="100"
               Source="danmu.ico"/>
    </Grid>
</Window>